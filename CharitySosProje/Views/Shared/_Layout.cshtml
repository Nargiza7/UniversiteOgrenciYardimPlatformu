    <script>
        // Renk değişimi için event listener ekleme
        document.querySelectorAll('.link-change-color').forEach(function (link) {
            link.addEventListener('click', function () {
                // Tüm linklerden 'active' sınıfını kaldır
                document.querySelectorAll('.link-change-color').forEach(function (el) {
                    el.classList.remove('active');
                });
                // Tıklanan linke 'active' sınıfını ekle
                this.classList.add('active');
            });
        });
    </script>

